{
  "name": "tweetscape-experiments",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "run-s 'build:*'",
    "build:css": "yarn generate:css --minify",
    "build:remix": "remix build",
    "build:server": "esbuild --platform=node --format=cjs ./server.ts --outdir=build",
    "dev": "run-p 'dev:*'",
    "dev:server": "cross-env NODE_ENV=development node --inspect --require ./node_modules/dotenv/config --require ./mocks ./build/server.js",
    "dev:build": "cross-env NODE_ENV=development yarn build:server --watch",
    "dev:remix": "cross-env NODE_ENV=development remix watch",
    "dev:css": "cross-env NODE_ENV=development yarn generate:css --watch",
    "dev:redis": "dotenv -- bash -c 'docker run -p 6379:6379 redis redis-server --protected-mode yes --requirepass $REDIS_PASSWORD'",
    "docker": "docker-compose up -d",
    "format": "prettier --write .",
    "style": "pretty-quick --staged",
    "generate:css": "tailwindcss -o ./app/styles/tailwind.css",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint --ext .js,.ts,.jsx,.tsx app",
    "setup": "prisma migrate dev && prisma db seed",
    "start": "cross-env NODE_ENV=production node ./build/server.js",
    "start:mocks": "cross-env NODE_ENV=production node --require ./mocks --require dotenv/config ./build/server.js",
    "test": "vitest",
    "typecheck": "tsc -b",
    "validate": "run-p \"test --run\" lint typecheck"
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build"
  ],
  "dependencies": {
    "@prisma/client": "3.15.1",
    "@remix-run/express": "^1.5.1",
    "@remix-run/node": "^1.5.1",
    "@remix-run/react": "^1.5.1",
    "@remix-run/server-runtime": "^1.5.1",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "express": "^4.18.1",
    "mdx-bundler": "^9.0.1",
    "morgan": "^1.10.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "redis": "^4.1.0",
    "timeago-react": "^3.0.5",
    "timeago.js": "^4.0.2",
    "tiny-invariant": "^1.2.0",
    "twitter-api-v2": "^1.12.2",
    "twitter-text": "^3.1.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^6.3.1",
    "@remix-run/dev": "^1.5.1",
    "@tailwindcss/typography": "^0.5.2",
    "@testing-library/dom": "^8.13.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^12.1.5",
    "@testing-library/user-event": "^14.2.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/eslint": "^8.4.3",
    "@types/express": "^4.17.13",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.41",
    "@types/react": "^17.0.45",
    "@types/react-dom": "^17.0.17",
    "@types/twitter-text": "^3.1.1",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "@vitejs/plugin-react": "^1.3.2",
    "autoprefixer": "^10.4.7",
    "c8": "^7.11.3",
    "dotenv": "^16.0.1",
    "dotenv-cli": "^5.1.0",
    "esbuild": "^0.14.43",
    "eslint": "^8.17.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^16.2.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.5.0",
    "happy-dom": "^5.2.0",
    "husky": "^8.0.1",
    "msw": "^0.42.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "prettier": "^2.6.2",
    "prettier-plugin-tailwindcss": "^0.1.11",
    "pretty-quick": "^3.1.3",
    "prisma": "3.15.1",
    "start-server-and-test": "^1.14.0",
    "tailwindcss": "^3.1.0",
    "ts-node": "^10.8.1",
    "tsconfig-paths": "^3.14.1",
    "typescript": "^4.7.3",
    "vite": "^2.9.10",
    "vite-tsconfig-paths": "^3.5.0",
    "vitest": "^0.14.1"
  },
  "engines": {
    "node": ">=14"
  },
  "prisma": {
    "seed": "ts-node --require tsconfig-paths/register prisma/seed.ts"
  },
  "packageManager": "yarn@3.2.1"
}